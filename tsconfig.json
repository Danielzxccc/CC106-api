{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "node",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "plugins": [
            {
              "name": "typescript-tslint-plugin",
              "config": {
                "formatter": "prose",
                "rulesDirectory": "node_modules/codelyzer",
                "tslint": true,
                "eslint": false,
                "formatterOptions": {
                  "encoding": "utf-8"
                }
              }
            }
          ]
    },
    "include": ["src/**/*"]
}